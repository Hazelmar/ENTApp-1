@page
@model EntApp_1.Pages.TaGHelpPlayModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>TaGHelpPlay</title>
</head>
<body>
    <h1>Hello from the TagHelpPlay.cshtml page</h1>
    <h2>@Model.Message</h2>
    <h3>@Model.PostMessage</h3>
    <form method="post">
        <label asp-for=Number1>Enter your first number</label>
        <input asp-for=Number1 />

        <button type="submit">Click me</button>
        <label asp-for=Number2>Enter Second Number</label>
        <input asp-for=Number2 />

        <br />
        <label asp-for=Number3>EnterThird Number</label>
        <input asp-for=Number3 />

        <br />
        <label asp-for=Number4>Enter Fourth Number</label>
        <input asp-for=Number4 />

        <br />
        <label asp-for=Number5>Enter Fifth Number</label>
        <input asp-for=Number5 />

        <br />
        <label asp-for=Number6>Enter a Decimal Number</label>
        <input asp-for=Number6 />

        <br />
        <label asp-for=Number7>Enter a Decimal Number</label>
        <input asp-for=Number7 />

        <br />
        <label asp-for=Number8>Enter Float</label>
        <input asp-for=Number8 />

        <br />
        <label asp-for=Number9>Enter Float</label>
        <input asp-for=Number9 />

        <br />
        <label asp-for=TestString>Enter string</label>
        <input asp-for=TestString />

        <br />
        <label asp-for=Date1>Enter DateTime</label>
        <input asp-for=Date1 />

        <br />
        <label asp-for=IsContactAllowed></label>
        <input asp-for=IsContactAllowed />
        <button type="submit">Click me</button>
        <br />


        <h4>@Model.SeasonMessage</h4>
        <label for="Winter">
            <input value="Winter" id="Winter" type="radio" asp-for=Season checked="checked" />Winter
        </label>
        <label for="Summer">
            <input value="Summer" id="Summer" type="radio" asp-for=Season />Summer
        </label>
        <label for="Spring">
            <input value="Spring" id="Spring" type="radio" asp-for=Season />Spring
        </label>
        <label for="Autumn">
            <input value="Autumn" id="Autumn" type="radio" asp-for=Season />
        </label>
        <button type="submit">Submit</button>

    </form>

</body>
</html>
